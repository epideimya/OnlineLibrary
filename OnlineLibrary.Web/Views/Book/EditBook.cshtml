@model EditBookViewModel
<h3>Страница для редактирования книги</h3>

@using (Html.BeginForm("Edit", "Book", new { id = Model.Id }, FormMethod.Post, false
    , new { @enctype = "multipart/form-data" }))// Указание на конкретный Action и Controller на который эта форма отправит запрос(По умолчанию POST)
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Author, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ShortDescription, new { @class = "form-text text-muted" })
        @Html.TextAreaFor(x => x.ShortDescription, 6, 3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseYear, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.ReleaseYear, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Body, new { @class = "form-text text-muted" })
        @Html.TextAreaFor(x => x.Body, 15, 10, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.BookImage, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.BookImage, new { @class = "form-control", @type = "file", @accept = "image/*,image/jpeg" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>

}